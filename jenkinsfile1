pipeline {
     agent {
       labels 'test'
       }
     tools {
        maven 'maven3' 
        }
    stages {
        stage("Test"){
            steps{
                // mvn test
                sh "mvn test"

                
            }
            
        }
        stage("Build"){
            steps{
                sh "mvn package"
                
            }
            
        }
        stage("Deploy on Test"){
            steps{
                // deploy on container -> plugin
                deploy adapters: [tomcat9(credentialsId: 'tomcat9', path: '', url: 'http://3.14.65.21:8080')], contextPath: '/besanttest', war: '**/*.war'
              
            }
            
        }
        stage("Deploy on Prod"){
             input {
                message "Should we continue?"
                ok "Yes we Should"
            }
            
            steps{
                // deploy on container -> plugin
                deploy adapters: [tomcat9(credentialsId: 'tomcat9', path: '', url: 'http://3.14.65.21:8080')], contextPath: '/besantprod', war: '**/*.war'

            }
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"

        }
        failure{
            echo "========pipeline execution failed========"

        }
    }
}
